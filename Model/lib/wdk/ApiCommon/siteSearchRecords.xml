      </propertyList>

      <primaryKey aliasQueryRef="EstTableQueries.EstAlias">
        <columnRef>source_id</columnRef>
      </primaryKey>

      <idAttribute name="primary_key" displayName="EST ID">
        <propertyList name="boost">
          <value>100</value>
        </propertyList>
        <text>
