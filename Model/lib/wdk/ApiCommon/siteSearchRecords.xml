        <columnAttribute name="child_id"/>
      </table>

    </recordClass>

    <!-- ################################################################### -->
    <!-- ###########################  EST Record  ########################## -->
    <!-- ################################################################### -->

    <recordClass name="est" urlName="est" displayName="EST">
      <propertyList name="batch">
